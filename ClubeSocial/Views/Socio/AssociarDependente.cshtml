@model ClubeSocial.Models.Dependente

@{
    ViewData["Title"] = "AssociarDependente";
}

<h1 class="text-center">Associar Dependente</h1>
<br />
<hr />
<div class="align-items-center">
    <h1 class="text-center login-title">Cluber Social</h1>
    <div class="account-wall">
        <div class="row">
            <div class="col-md-6 offset-3">
                <form asp-action="AssociarDependente">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pelido" class="control-label"></label>
                        <input asp-for="Pelido" class="form-control" />
                        <span asp-validation-for="Pelido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNacimento" class="control-label"></label>
                        <input asp-for="DataNacimento" class="form-control" />
                        <span asp-validation-for="DataNacimento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="ListarDependente" class="btn btn-light">Voltar para a lista</a>
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
